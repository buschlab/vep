FROM ensemblorg/ensembl-vep:release_103.1

MAINTAINER Matthias Munz <matthias.munz@gmx.de>

RUN perl INSTALL.pl \
        --AUTO fcp \
        --NO_UPDATE \
        --ASSEMBLY GRCh38 \
        --PLUGINSDIR /opt/vep/.vep/Plugins/ \
        --CACHEDIR /opt/vep/.vep/ \
        --PLUGINS all \
        --SPECIES homo_sapiens_merged && \
    vep -id rs699 \
      --cache \
      --nearest symbol \
      -o 'STDOUT' \
      --no_stats \
      > /dev/null
